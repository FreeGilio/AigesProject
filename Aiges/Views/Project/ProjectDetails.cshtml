@model Aiges.MVC.Models.ProjectDetailsViewModel

@{
    ViewData["Title"] = "ProjectDetails";
}

<head>
    <link rel="stylesheet" href="~/css/ProjectPage.css" asp-append-version="true" />
</head>

<body>
    <div class="container">      
        <div class="content">
            <h1>@Model.Title</h1>
            <p>@Model.Description</p>
            <p><strong>Category:</strong> @(Model.Category != null ? Model.Category.Name : "Uncategorized")</p>
            <p><strong>Tags:</strong> @Model.Tags</p>
            <p><strong>Last Updated:</strong> @Model.LastUpdated.ToString("MMMM d, yyyy")</p>
            <p>@Model.ProjectFile<p>

            @if (Model.Concept)
            {
                <p class="concept-note"><strong>Note:</strong> This project is still in concept phase.</p>
            }
        </div>
    </div>
</body>
